<% layout("/layouts/boilerplate") %>

    <body>
        <div class="row">
            <div class="col-8">
                <div class="card col-10 listing-card">
                    <h3>
                        <%= listing.title %>
                    </h3>
                    <img src="<%= listing.image %>" class="card-img-top show-img" alt="image">
                    <div class="card-body">
                        <p class="card-text">Owned by <b>
                                <%= listing.owner.username %>
                            </b></p>
                        <p class="card-text">
                            <%= listing.description %>
                        </p>
                        <p class="card-text"> &#8377;<%= listing.price.toLocaleString("en-IN") %>/night</p>
                        <p class="card-text">
                            <%= listing.location %>
                        </p>
                        <p class="card-text">
                            <%= listing.country %>
                        </p>

                        <% if(currUser && currUser._id.equals(listing.owner._id)){ %>

                            <div class="btns">
                                <a class="btn edit-btn px-4" href="/listings/<%= listing._id %>/edit">Edit</a>

                                <form method="post" action="/listings/<%= listing._id %>?_method=DELETE">
                                    <button class="btn delete-btn">Delete</button>
                                </form>
                            </div>
                            <% } %>

                            
                            <div>
                                <% if(currUser) { %>
                                    <hr>
                                        <h4>Leave a Review</h4>
                                        <form action="/listings/<%= listing._id %>/reviews" method="post" method="post"
                                            novalidate class="needs-validation">
                                            <div class="mb-3 mt-3">
                                                <label class="form-label" for="rating">Rating</label>
                                                <input class="form-range" type="range" min="1" max="5"
                                                    name="review[rating]" required>
                                            </div>
                                            
                                            <div class="mb-3">
                                                <label class="form-label" for="review[comment]">Comments</label>
                                                <textarea class="form-control" name="review[comment]"
                                                placeholder="Comments" required id="comments"></textarea>
                                                <div class="invalid-feedback">Please leave some comments for review
                                                </div>
                                            </div>
                                            
                                            <button class="btn btn-outline-dark">Submit</button>
                                        </form>
                                        <% } %>
                                        <hr>
                                        <p><b>All Reviews</b></p>
                                        <div class="row">

                                            <% for(let review of listing.reviews){ %>
                                                <div class="card mb-2 ms-2 p-2">
                                                    <h6 class="card-title">@<%= review.author.username %></h6>
                                                    <div class="card-text">
                                                        <%= review.comment %>
                                                    </div>
                                                    <div class="card-text">
                                                        <%= review.rating %> stars
                                                    </div>
                                                    <form
                                                        action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE"
                                                        method="post">
                                                        <button class="btn btn-sm btn-dark mt-2">Delete</button>
                                                    </form>
                                                </div>
                                                <% } %>
                                        </div>
                                </div>
                    </div>
                </div>


            </div>
        </div>
    </body>
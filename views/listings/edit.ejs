<% layout("/layouts/boilerplate") %>

    <body>
        <div class="row">
            <div class="col-8">
                <form action="/listings/<%= listing._id %>?_method=PUT" method="post" novalidate
                    class="needs-validation">
                    <h2>Edit this listing</h2>
                    <div class="mb-3">
                        <label for="title">Title</label>
                        <input type="text" value="<%= listing.title %>" name="title" class="form-control" required>
                        <div class="valid-feedback">Title is valid</div>
                        <div class="invalid-feedback">Title is not valid</div>
                    </div>
                    <div class="mb-3">
                        <label for="description">Description</label>
                        <textarea name="description"
                            class="form-control" required><%= listing.description %></textarea>
                            <div class="valid-feedback">Description is valid</div>
                            <div class="invalid-feedback">Description is not valid</div>
                    </div>
                    <div class="mb-3">
                        <label for="image">Image</label>
                        <input type="text" value="<%= listing.image %>" name="image" class="form-control" required>
                        <div class="valid-feedback">Image is valid</div>
                        <div class="invalid-feedback">Image is not valid</div>
                    </div>
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <label for="price">Price</label>
                            <input type="number" value="<%= listing.price %>" name="price" class="form-control" required>
                            <div class="valid-feedback">Price is valid</div>
                            <div class="invalid-feedback">Price is not valid</div>
                        </div>
                        <div class="col-md-8 mb-3">
                            <label for="location">Location</label>
                            <input type="text" value="<%= listing.location %>" name="location" class="form-control" required>
                            <div class="valid-feedback">Location is valid</div>
                            <div class="invalid-feedback">Location is not valid</div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="country">Country</label>
                        <input type="text" value="<%= listing.country %>" name="country" class="form-control" required>
                        <div class="valid-feedback">Country is valid</div>
                        <div class="invalid-feedback">Country is not valid</div>
                    </div>
                    <button class="mb-3 btn edit-btn">Edit</button>
                </form>
            </div>
        </div>
    </body>